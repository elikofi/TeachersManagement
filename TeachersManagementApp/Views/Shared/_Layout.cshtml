<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EliCher - Teachers Management App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/teste.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 px-5">

            <span class="name pl-10"> ELCHER </span>


            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <li class="nav-item">
                        <a href="/Teacher/Add" class="nav-link">Teachers</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Gender/Add" class="nav-link">Genders</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Nationality/Add" class="nav-link">Nationalities</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Subject/Add" class="nav-link">Subjects</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Role/Add" class="nav-link">Roles</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Qualification/Add" class="nav-link">Qualifications</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="search-bar">
        <form>
            <input type="text" name="text" class="search" placeholder="Search here!">
            <button type="submit" class="btn btn-outline-success">Search</button>
        </form>
    </section>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>

