@model TeachersManagementApp.Models.Domain.Teacher
@{
}

<div class="container pt-10">
    <div>
        <h2>Update Teacher</h2>
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input type="text" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Age">Age:</label>
                <input type="number" class="form-control" asp-for="Age" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SubjectId">Subject name:</label>
                <select asp-for="SubjectId" asp-items="Model.SubjectList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NationalityId">Nationality:</label>
                <select asp-for="NationalityId" asp-items="Model.NationalityList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="NationalityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GenderId">Gender:</label>
                <select asp-for="GenderId" asp-items="Model.GenderList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoleId">Role:</label>
                <select asp-for="RoleId" asp-items="Model.RoleList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QualificationId">Qualification :</label>
                <select asp-for="QualificationId" asp-items="Model.QualificationList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="QualificationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingDate">Starting Date:</label>
                <input type="date" class="form-control" asp-for="StartingDate" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>


            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <div class="form-group pt-3">
                <button type="submit" class="btn btn-outline-success">Save</button>
                <a href="/Teacher/GetAll" class="btn btn-outline-info">List</a>
            </div>
        </form>
    </div>
</div>
